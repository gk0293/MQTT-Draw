<mah:MetroWindow x:Class="MqttDaGClient.View.Client"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
       xmlns:local="clr-namespace:MqttDaGClient.View"
       mc:Ignorable="d"
       Title="Client" Height="500" Width="400"
       WindowStartupLocation="Manual"
       Left="800"
       Top="200"
       >
   <Grid>
       <StackPanel>
           <TextBlock HorizontalAlignment="Center" Margin="0,20,0,4" TextWrapping="NoWrap" Text="主机地址" VerticalAlignment="Top" FontSize="18"/>
           <TextBox HorizontalAlignment="Center" Margin="0,4" TextWrapping="NoWrap"
                    Text="{Binding Client.ServerIP}" Width="175"  FontSize="16" />
           <TextBlock HorizontalAlignment="Center" Margin="0,4" TextWrapping="NoWrap" Text="端口" VerticalAlignment="Top" FontSize="18"/>
           <TextBox HorizontalAlignment="Center" Margin="0,4" TextWrapping="NoWrap" 
                    Text="{Binding Client.ServerPort}" Width="175"  FontSize="16"/>
           <TextBlock HorizontalAlignment="Center"  Margin="0,4"  TextWrapping="NoWrap" Text="用户" VerticalAlignment="Top" FontSize="18"/>
           <TextBox HorizontalAlignment="Center"  Margin="0,4"  TextWrapping="NoWrap" 
                    Text="{Binding Client.ServerName}" VerticalAlignment="Top" Width="175"  FontSize="16"/>
           <TextBlock HorizontalAlignment="Center"  Margin="0,4"  TextWrapping="NoWrap" Text="密码" VerticalAlignment="Top" FontSize="18"/>
           <TextBox HorizontalAlignment="Center"  Margin="0,4" TextWrapping="NoWrap" 
                    Text="{Binding Client.ServerPwd}" VerticalAlignment="Top" Width="175"  FontSize="16"/>
           <TextBlock HorizontalAlignment="Center"  Margin="0,4"  TextWrapping="NoWrap" Text="客户端ID" VerticalAlignment="Top" FontSize="18"/>
           <TextBox HorizontalAlignment="Center"  Margin="0,4" TextWrapping="NoWrap" 
                    Text="{Binding Client.ClientId}" VerticalAlignment="Top" Width="175"  FontSize="16"/>
       </StackPanel>

       <Button Content="连接" HorizontalAlignment="Center" Width="80" Height="40" FontSize="20" Margin="0,397,0,0" 
               Command="{Binding ConnectCommand}"  VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" FontWeight="Normal"/>

   </Grid>
</mah:MetroWindow>
